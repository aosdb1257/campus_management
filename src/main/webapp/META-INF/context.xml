<?xml version="1.0" encoding="UTF-8"?>

<Context>
    <Resource name="jdbc/campusmanagement"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3307/campusmanagement?serverTimezone=Asia/Seoul"
              username='campusamdin'
              password="1234"
              maxTotal="20"
              maxIdle="10"
              maxWaitMillis="10000"
              validationQuery="SELECT 1"
              />
</Context>

